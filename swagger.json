{
  "openapi": "3.0.0",
  "info": {
    "title": "API - Task Collaboration",
    "version": "1.0.0",
    "description": "Documenta\u00e7\u00e3o da API de gerenciamento de tarefas e times.",
    "contact": {
      "name": "Equipe de Desenvolvimento",
      "email": "suporte@taskcollab.local"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Autentica um usu\u00e1rio",
        "tags": ["Login"],
        "responses": {
          "200": {
            "description": "Token JWT retornado"
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Cria um novo usu\u00e1rio",
        "tags": ["User"],
        "responses": {
          "200": {
            "description": "Usu\u00e1rio criado com sucesso"
          }
        }
      }
    },
    "/user/{id}": {
      "delete": {
        "summary": "Deleta um usu\u00e1rio",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usu\u00e1rio deletado"
          }
        }
      },
      "put": {
        "summary": "Atualiza dados de um usu\u00e1rio",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usu\u00e1rio atualizado"
          }
        }
      },
      "get": {
        "summary": "Lista dados de um usu\u00e1rio",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes do usu\u00e1rio"
          }
        }
      }
    },
    "/task": {
      "post": {
        "summary": "Cria uma tarefa",
        "tags": ["Task"],
        "responses": {
          "200": {
            "description": "Tarefa criada com sucesso"
          }
        }
      }
    },
    "/task/{id}": {
      "get": {
        "summary": "Lista uma tarefa espec\u00edfica",
        "tags": ["Task"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes da tarefa"
          }
        }
      }
    },
    "/team": {
      "post": {
        "summary": "Cria um time",
        "tags": ["Team"],
        "responses": {
          "200": {
            "description": "Time criado com sucesso"
          }
        }
      }
    },
    "/team/{id}/tasks": {
      "get": {
        "summary": "Lista tarefas em um time",
        "tags": ["Team"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefas do time"
          }
        }
      }
    },
    "/team/{team}/task/{task}": {
      "put": {
        "summary": "Atribui uma tarefa a um time",
        "tags": ["Task"],
        "parameters": [
          {
            "name": "team",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "task",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefa atribu\u00edda ao time"
          }
        }
      }
    },
    "/tasks": {
      "get": {
        "summary": "Lista todas as tarefas",
        "tags": ["Task"],
        "responses": {
          "200": {
            "description": "Lista de tarefas"
          }
        }
      }
    },
    "/team/{id}": {
      "delete": {
        "summary": "Deleta um time",
        "tags": ["Team"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Time deletado"
          }
        }
      },
      "put": {
        "summary": "Atualiza dados de um time",
        "tags": ["Team"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Time atualizado"
          }
        }
      },
      "get": {
        "summary": "Lista dados de um time",
        "tags": ["Team"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes do time"
          }
        }
      }
    },
    "/teams": {
      "get": {
        "summary": "Lista todos os times",
        "tags": ["Team"],
        "responses": {
          "200": {
            "description": "Lista de times"
          }
        }
      }
    },
    "/team/{id}/users": {
      "get": {
        "summary": "Lista usu\u00e1rios em um time",
        "tags": ["Team"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usu\u00e1rios do time"
          }
        }
      }
    },
    "/team/{team}/user/{user}": {
      "put": {
        "summary": "Atribui um usu\u00e1rio a um time",
        "tags": ["User"],
        "parameters": [
          {
            "name": "team",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usu\u00e1rio atribu\u00eddo ao time"
          }
        }
      }
    },
    "/user/{user}/task/{task}": {
      "put": {
        "summary": "Atribui uma tarefa a um usu\u00e1rio",
        "tags": ["User"],
        "parameters": [
          {
            "name": "user",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "task",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefa atribu\u00edda ao usu\u00e1rio"
          }
        }
      }
    },
    "/user/{id}/tasks": {
      "get": {
        "summary": "Lista tarefas atribu\u00eddas a um usu\u00e1rio",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefas do usu\u00e1rio"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Lista todos os usu\u00e1rios",
        "tags": ["User"],
        "responses": {
          "200": {
            "description": "Lista de usu\u00e1rios"
          }
        }
      }
    }
  }
}
